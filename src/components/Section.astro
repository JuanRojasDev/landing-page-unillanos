---
const { color, title, subtitle, subtitle2, subtitle3, subtitle4, subtitle5, person, acknowledgment, id, image } = Astro.props;
const textColor = 'text-black';
---

<section
  class="landing-section bg-white w-full text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
  <header>
    <h2 class={`${textColor} pt-20 text-[40px] font-medium`}>
      {title}
    </h2>
    <p class="text-gray-600 text-sm description-text">
      {acknowledgment}
    </p>
    <p class="text-black text-sm description-text">
      {subtitle}
    </p>
    <p class="text-black text-sm description-text">
      {subtitle2}
    </p>
    <p class="text-black text-sm description-text">
      {subtitle3}
    </p>
    <p class="text-black text-sm description-text">
      {subtitle4}
    </p>
    <p class="text-black text-sm description-text">
      {subtitle5}
    </p>
    <div class="flex justify-center">
      <img src={image} class="w-40 h-40 rounded-full border-4 border-white">
    </div>
    <p class="text-gray-600 text-sm description-text">
      {person}
    </p>
  </header>
</section>

<style>
  .landing-section {
    display: flex;
    flex-direction: column;
    margin: 0; /* Remove margin */
    padding: 0; /* Remove padding */
  }

  .description-text {
    background-color: transparent;
    padding: 10px 10px; /* Reduced padding */
    line-height: 1.6;
    margin: 0 auto;
    max-width: 800px;
    font-size: 18px;
  }
  .footer {
    margin: 0; /* Remove margin */
  }
</style>
